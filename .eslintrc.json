{
  "ignorePatterns": ["node_modules/**", "dist/**", "build/**", ".vscode/**"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "standard", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": "off",
    "camelcase": "off",
    "no-console": "off",
    "no-unused-vars": "error",
    "react/jsx-uses-react": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
